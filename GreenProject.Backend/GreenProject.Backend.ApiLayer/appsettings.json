{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "PasswordValidationSettings": {
    "MinimumLength": 8,
    "MaximumLength": 64
  },
  "ImageUploadSettings": {
    "DefaultFormat": "Png",
    "Categories": {
      "Size": {
        "Width": 800,
        "Height": 800
      },
      "DirectoryTemplate": "uploads/images/categories/{0}/",
      "Name": "main",
      "Format": "Jpeg"
    },
    "Products": {
      "Size": {
        "Width": 800,
        "Height": 800
      },
      "DirectoryTemplate": "uploads/images/products/{0}/",
      "Name": "main",
      "Format": "Jpeg"
    },
    "SupplierLogos": {
      "Size": {
        "Width": 800,
        "Height": 800
      },
      "DirectoryTemplate": "uploads/images/suppliers/{0}/",
      "Name": "logo",
      "Format": "Png"
    },
    "SupplierBackgroundImages": {
      "Size": {
        "Width": 1920,
        "Height": 1080
      },
      "DirectoryTemplate": "uploads/images/suppliers/{0}/",
      "Format": "Jpeg"
    }
  },
  "MailNotificationsSettings": {
    "OrderReceived": {
      "Context": "Test",
      "BodyTemplateFile": "OrderReceived.html",
      "Subject": "Nuovo ordine ricevuto"
    },
    "SupplierRegistered": {
      "Context": "Test",
      "BodyTemplateFile": "SupplierRegistered.html",
      "Subject": "Registrazione avvenuta"
    }
  },
  "PricingSettings": {
    "ProductsIvaPercentage": 0.04,
    "ShippingCost": 4.85,
    "FreeShippingThreshold": {
      "Business": 80,
      "Person": 25
    }
  }
