{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "PasswordValidationSettings": {
    "MinimumLength": 8,
    "MaximumLength": 64
  },
  "ImageUploadSettings": {
    "DefaultFormat": "Png",
    "Categories": {
      "Size": {
        "Width": 800,
        "Height": 800
      },
      "DirectoryTemplate": "uploads/images/categories/{0}/",
      "Name": "main",
      "Format": "Jpeg"
    },
    "PurchasableItems": {
      "Size": {
        "Width": 800,
        "Height": 800
      },
      "DirectoryTemplate": "uploads/images/products/{0}/",
      "Name": "main",
      "Format": "Jpeg"
    }
  },
  "PricingSettings": {
    "ShippingIvaPercentage": 0.04,
    "ShippingCost": 3.90
  },
  "MailSettings": {
    "MailLayoutKey": "Common/MailLayout.cshtml",
    "EmailDescriptions": {
      "AccountConfirmation": {
        "Title": "Conferma Account",
        "Subject": "Conferma Account Green Project",
        "BodyTemplateFile": "AccountConfirmation",
        "Context": "Test"
      }
    }
  },
  "NotificationsDaemonSettings": {
    "Period": "00:10:00",
    "InitialDelay": "00:01:00",
    "IsEnabled": true
  },
  "OrdersSettings": {
    "LockTimeSpanInDays": 2,
    "WeeklyOrderRenewTimeInDays": 7
  },
  "CsvSettings": {
    "Encoding": "utf-8",
    "Delimiter": "|",
    "CultureInfo": "it-it",
    "SupportedIvaValues": [ 4, 10 ],
    "DailyOrders": {
      "FileName": "ordini_{0:yyyy-MM-dd}.csv",
      "HeaderNames": {
        "Street": "Via",
        "HouseNumber": "Civico",
        "City": "Località",
        "ZipCode": "CAP",
        "Name": "Nome Cliente",
        "OrderNumber": "Codice Ordine"
      }
    },
    "DailyProducts": {
      "FileName": "pesi_{0:yyyy-MM-dd}.csv",
      "HeaderNames": {
        "OrderNumber": "Codice Ordine",
        "Weight": "Peso Teorico"
      }
    },
    "SupplierOrder": {
      "FileName": "fornitore_{0:yyyy-MM-dd}.csv",
      "HeaderNames": {
        "ProductName": "Prodotto",
        "Quantity": "Quantità",
        "UnitName": "Unità di misura"
      }
    },
    "Revenue": {
      "FileName": "fatturato_{0:MMM-yyyy}.csv",
      "HeaderNames": {
        "Date": "Data",
        "Total4Percent": "4%",
        "Total10Percent": "10%"
      }
    }
  }
}
