@using RazorLight
@using GreenProject.Backend.Entities;
@inherits TemplatePage<dynamic>

@{
    Order order = Model.Order;
}

<tr>
    <td colspan="12" style="padding: 16px;">
        <h1>Ordine completato</h1>
        <p>
            Il tuo ordine N° <strong>@order.OrderNumber</strong> è stato contrassegnato come completato.
        </p>
        <h4 style="margin: 16px 0 8px 0;">Speriamo di rivederti presto!</h4>
        @{ await IncludeAsync("OrderView.cshtml", order); }
    </td>
</tr>
